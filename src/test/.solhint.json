{
  "extends": "solhint:recommended",
  "rules": {
    "code-complexity": ["warn", 8],
    "compiler-version": ["warn", ">=0.8.0"],
    "const-name-snakecase": "warn",
    "constructor-syntax": "error",
    "func-visibility": ["warn", { "ignoreConstructors": true }],
    "max-line-length": ["off", 120],
    "not-rely-on-time": "off",
    "reason-string": ["warn", { "maxLength": 32 }],
    "func-param-name-mixedCase": "off",
    "named-parameters-mapping": "off",
    "no-console": "off",
    "func-name-mixedcase": "off",
    "no-unused-vars": "off",
    "no-global-import": "off",
    "named-parameters-function": ["off", 3],
    "no-unused-import": "off",
    "state-visibility": "off",
    "private-vars-leading-underscore": "off",
    "no-inline-assembly": "off",
    "var-name-mixedcase": "off"
  }
}
